, // 文章内容\r\n  importance: 0,\r\n  summary: \"\",\r\n  type: \"\",\r\n};\r\nexport default {\r\n  components: { Tinymce, Page401 },\r\n  data() {\r\n    return {\r\n      postForm: Object.assign({}, defaultForm),\r\n      loading: false,\r\n    };\r\n  },\r\n  computed: {\r\n    role: function() {\r\n      if (this.$store.state.role === \"Admin/管理员\") {\r\n        return true;\r\n      } else {\r\n        return false;\r\n      }\r\n    },\r\n  },\r\n  methods: {\r\n    saveEmail() {\r\n      this.loading = true;\r\n      this.$store\r\n        .dispatch(\"createEmailTemplate\", this.postForm)\r\n        .then(() => {\r\n          this.$message.success(\"发布成功！\");\r\n          this.loading = false;\r\n          this.$router.push(\"/dashboard/emaillist\");\r\n        })\r\n        .catch(() => {\r\n          this.$message.error(\"添加失败！\");\r\n        });\r\n    },\r\n  },\r\n};\r\n</script>\r\n<style lang=\"scss\" scoped>\r\n.emailContainer {\r\n  width: 95%;\r\n  margin: 0 auto;\r\n  h3 {\r\n    span {\r\n      font-size: 18px;\r\n      color: #000000;\r\n    }\r\n  }\r\n  .emailDisplay {\r\n    font-size: 16px;\r\n  }\r\n}\r\n.preview {\r\n  border: 1px solid #000;\r\n}\r\n</style>\r\n"]}]}