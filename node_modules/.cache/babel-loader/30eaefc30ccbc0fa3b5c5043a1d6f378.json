s=\"col-12\">\r\n          <el-button\r\n            class=\"float-right mr-2\"\r\n            type=\"warning\"\r\n            @click.native=\"$router.push('/dashboard/emaillist')\"\r\n            >取 消\r\n          </el-button>\r\n          <el-button\r\n            class=\"float-right mr-2\"\r\n            type=\"primary\"\r\n            @click.native=\"saveEmail\"\r\n            >发 布</el-button\r\n          >\r\n        </el-form-item>\r\n      </el-form>\r\n\r\n      <div class=\"row preview\">\r\n        <div class=\"col-12\">\r\n          <h4><span>预览: </span></h4>\r\n        </div>\r\n        <div class=\"col-12 emailDisplay\">\r\n          <div v-html=\"postForm.content\"></div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n<script>\r\nimport Tinymce from \"@/components/Tinymce\";\r\nimport Page401 from \"@/components/401\";\r\nconst defaultForm = {\r\n  title: \"\", // 文章题目\r\n  content: \"\", // 文章内容\r\n  importance: 0,\r\n  summary: \"\",\r\n  type: \"\",\r\n};\r\nexport default {\r\n  components: { Tinymce, Page401 },\r\n  data() {\r\n    return {\r\n      postForm: Object.assign({}, defaultForm),\r\n      loading: false,\r\n    };\r\n  },\r\n  computed: {\r\n    role: function() {\r\n      if (this.$store.state.role === \"Admin/管理员\") {\r\n        return true;\r\n      } else {\r\n        return false;\r\n      }\r\n    },\r\n  },\r\n  methods: {\r\n    saveEmail() {\r\n      this.loading = true;\r\n      this.$store\r\n        .dispatch(\"createEmailTemplate\", this.postForm)\r\n        .then(() => {\r\n          this.$message.success(\"发布成功！\");\r\n          this.loading = false;\r\n          this.$router.push(\"/dashboard/emaillist\");\r\n        })\r\n        .catch(() => {\r\n          this.$message.error(\"添加失败！\");\r\n        });\r\n    },\r\n  },\r\n};\r\n</script>\r\n<style lang=\"scss\" scoped>\r\n.emailContainer {\r\n  width: 95%;\r\n  margin: 0 auto;\r\n  h3 {\r\n    span {\r\n      font-size: 18px;\r\n      color: #000000;\r\n    }\r\n  }\r\n  .emailDisplay {\r\n    font-size: 16px;\r\n  }\r\n}\r\n.preview {\r\n  border: 1px solid #000;\r\n}\r\n</style>\r\n"],"sourceRoot":"src/views/admin/components"}]}